<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailsCardView"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            card_view:cardElevation="5dp"
            card_view:contentPadding="0dp"
            android:clickable="false">

            //Sch Logo + L1R4 + Intake....
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@drawable/relative_background_with_shadow">

                <ImageView
                    android:id="@+id/tab1_Institution_Logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:contentDescription="tab1_Institution_Logo"/>

                <TextView
                    android:id="@+id/tab1_Course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tab1_Institution_Logo"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/tab1_Institution_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab1_Course_name"
                    android:layout_toEndOf="@+id/tab1_Institution_Logo"
                    android:textSize="13sp"
                    android:textColor="@color/gray"/>

                <View
                    android:id="@+id/view"
                    style="@style/Divider"
                    android:layout_below="@+id/tab1_Institution_Logo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/linear_background_with_shadow"
                    android:layout_below="@+id/view"
                    android:padding="10dp"
                    android:textAlignment="center">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/tab1_Course_Grade_Circle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/greencircle"/>
                        <TextView
                            android:id="@+id/tab1_Course_Grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:width="80dp"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tab1_Course_Grade_Title"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tab1_Course_Grade_Circle"
                            android:textSize="16sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="@string/L1R4"
                            android:textAlignment="center"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/tab1_Course_Intake_Circle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/greencircle"/>
                        <TextView
                            android:id="@+id/tab1_Course_Intake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:minWidth="80dp"
                            android:maxWidth="200dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/tab1_Course_Intake_Title"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tab1_Course_Intake_Circle"
                            android:textSize="16sp"
                            android:layout_marginTop="7dp"
                            android:text="@string/intake"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/tab1_Course_Website"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="Course Website Icon"/>
                        <TextView
                            android:id="@+id/tab1_Course_Website_Title"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tab1_Course_Website"
                            android:textSize="16sp"
                            android:text="@string/website"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:textAlignment="center"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="182dp"
                    android:background="@drawable/relative_background_with_shadow"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    >

                    <TextView
                        android:id="@+id/course_desc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Course Description"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="225dp" />

                    <TextView
                        android:id="@+id/course_desc_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/career_prospect_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:text="Career Prospect"/>

                    <TextView
                        android:id="@+id/career_prospect_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorAccent"
                        android:text="Research Assistant"/>


                    <TextView
                        android:id="@+id/direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:text="Direction"/>

                    <fragment
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:id="@+id/mapFragment" />


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/sp_sch_image" />

                    <TextView
                        android:id="@+id/institution_desc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:text="Institution Description"/>

                    <TextView
                        android:id="@+id/institution_desc_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
